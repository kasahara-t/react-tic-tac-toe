{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.eol": "\n",
    "prettier.tabWidth": 2,
    "editor.tabSize": 2,
    "editor.codeActionsOnSave": {
      "source.organizeImports.biome": "always",
      "quickfix.biome": "always"
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[javascriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome"
    },
    "files.associations": {
       "*.css": "tailwindcss"
    }
}