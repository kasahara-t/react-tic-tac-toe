{
  "extends": "@tsconfig/bun/tsconfig.json",
 
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["web", "bun-types"],

    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },

  "include": ["src"],

  "references": [{ "path": "./tsconfig.node.json" }]
}
